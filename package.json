{
  "name": "hypa-nextjs-boilerplate",
  "author": "Luiz Felicio <https://github.com/luizeboli>",
  "version": "1.0.0",
  "private": true,
  "url": "https://github.com/luizeboli",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --max-warnings=0",
    "storybook": "start-storybook -s ./public -p 6006 --no-dll",
    "build-storybook": "build-storybook -s ./public",
    "generate": "yarn plop --plopfile ./generators/plopfile.js",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "schema:download": "apollo client:download-schema --endpoint=http://localhost:1337/graphql schema-temp.gql",
    "schema:convert": "node convertToNonNull.js",
    "schema:codegen": "apollo codegen:generate --target typescript --excludes=node_modules/ --includes=src/graphql/**/*.ts --localSchemaFile schema.gql --tagName=gql --outputFlat src/graphql/generated",
    "types:generate": "yarn schema:download && yarn schema:convert && yarn schema:codegen"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@types/lodash.xor": "^4.5.6",
    "graphql": "^15.5.0",
    "lodash.xor": "^4.5.0",
    "next": "10.0.7",
    "next-pwa": "^5.0.4",
    "polished": "^4.1.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-slick": "^0.28.0",
    "styled-components": "5.2.1",
    "styled-icons": "^10.28.0",
    "styled-media-query": "^2.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "@storybook/theming": "^6.1.15",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.7.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.2",
    "@types/react-slick": "^0.23.4",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "apollo": "^2.32.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.1",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.3",
    "plop": "^2.7.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
